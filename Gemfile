source 'https://rubygems.org'

gem 'sinatra', '2.0.1'

group :development do
  gem 'capistrano', '~> 3.5'
  gem 'capistrano-chruby'
  gem 'capistrano-bundler'
  gem 'capistrano-passenger'
  gem 'highline'

  # For ssh-ed25519 support for capistrano
  gem 'rbnacl', '>=3.2', '< 5.0'
  gem 'bcrypt_pbkdf'
end
